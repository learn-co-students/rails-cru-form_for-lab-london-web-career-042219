<div class="container">
  <br>
  <h1 class="text-success"><%= @artist.name%></h1>
  <br>
  <p class="text-primary"><%= @artist.bio %></p>
  <br>
  <h4 class="text-success">Songs: </h4>
  <br>
  <% @artist.songs.each do |song| %>
  <ul>
    <li class="text-success"><%= link_to song.name, song_path(song) %></li>
  </ul>
  <% end %>
  <br>
  <h4 class="text-success">Genres: </h4>
  <br>
  <% @artist.genres.distinct.each do |genre| %>
  <ul>
    <li class="text-success"><%= link_to genre.name, genre_path(genre) %></li>
  </ul>
  <% end %>
  <br>
  <button type="button" class="btn btn-warning"><%= link_to "Main Menu", artists_path %></button>
  <button type="button" class="btn btn-danger"><%= link_to "Edit Artist", edit_artist_path(@artist) %></button>
</div>
